# 班组管理系统 - 环境变量配置示例
# 复制此文件为 .env 并修改为您的实际值

# ==================== 管理员账户配置 ====================
# 首次运行时创建的默认管理员账户
APP_USER=admin
APP_PASS=your_secure_password_here

# ==================== 应用配置 ====================
# Flask 密钥（生产环境必须修改为随机值）
# 生成方法: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=your_secret_key_here

# 应用运行端口
PORT=5001

# ==================== 数据库配置 ====================
# 数据库文件路径（相对于项目根目录）
DB_PATH=app.db

# ==================== 文件存储配置 ====================
# 上传文件存储目录
UPLOAD_DIR=uploads

# 导出文件存储目录
EXPORT_DIR=exports

# ==================== 安全配置 ====================
# 是否启用调试模式（生产环境必须设置为 False）
DEBUG=False

# ==================== 其他配置 ====================
# 日志级别 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
